<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.playmusicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeepHouseActivity"
            android:label="@string/category_deep_house"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".JazzActivity"
            android:label="@string/category_jazz"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PartyActivity"
            android:label="@string/category_party"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SleepActivity"
            android:label="@string/category_sleep"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>